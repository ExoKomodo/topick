    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "openai": "^3.3.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
